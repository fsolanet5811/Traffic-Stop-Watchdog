{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: cpp build active file",
            "command": "/usr/bin/cpp",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Desktop Build",
            "command": "/usr/bin/g++-7",
            "args": [
                "-g",
                "${workspaceFolder}/src/tsw.cpp",
                "${workspaceFolder}/src/**/**.cpp",
                "${workspaceFolder}/src/**/**/**.cpp",
                "/usr/lib/libSpinnaker.so.2.0.0.147",
                "/usr/lib/libSpinVideo.so.2.0.0.147",
                "-o",
                "${workspaceFolder}/bin/tsw",
                "-I",
                "/usr/include/spinnaker",
                "-I",
                "${workspaceFolder}/include",
                "-I",
                "/usr/local/include/hidapi",
                "-I",
                "/home/fel2/Projects/rapidjson/include/rapidjson",
                "-I",
                "/usr/include/opencv2",
                "-pthread",
                "-lopencv_core",
                "-lopencv_videoio",
                "-lopencv_imgproc"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Odroid Build",
            "command": "/usr/bin/arm-linux-gnueabihf-g++-7",
            "args": [
                "-g",
                "${workspaceFolder}/src/tsw.cpp",
                "${workspaceFolder}/src/**/**.cpp",
                "/usr/lib/libSpinnaker.so.2.0.0.147",
                "/usr/lib/libSpinVideo.so.2.0.0.147",
                "/usr/local/lib/libhidapi-libusb.so",
                "-o",
                "${workspaceFolder}/bin/tsw-arm",
                "-I",
                "/usr/include/spinnaker",
                "-I",
                "${workspaceFolder}/include",
                "-pthread",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}